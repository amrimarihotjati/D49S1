                    <label for="input-message" class="form-label">Content</label>
                    <textarea class="form-control" name="content" id="content" rows="7" value="Test lagi dah" required>{{blog.content}}</textarea>
                </div>
                <div class="mb-3">
                    <label for="input-message" class="form-label">Upload Image</label>
                    <div class="input-group mb-3">
                        <input type="file" class="form-control" name="image" id="upload-image">
                        <label class="input-group-text" for="inputGroupFile02">Upload</label>
                    </div>
                </div>
