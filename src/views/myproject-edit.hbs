        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark"
        style="display:flex; background:rgb(144, 12, 43); background: linear-gradient(90deg, rgba(144, 12, 43, 1) 0%, rgba(199, 0, 57, 1) 65%, rgba(217, 0, 0, 1) 100%);">
        <div class="container-fluid gap-2" style="margin-right:50px; margin-left:50px">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo03"
                aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" style="margin-bottom: 5px;" href="#">
                <img style="width: 50px;" src="https://companieslogo.com/img/orig/FWONK.D-6358a63d.png?t=1634623714"
                    alt="nav-icon">
            </a>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-2">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    {{#if isLogin}}
                    <li class="nav-item">
                        <a class="nav-link active" href="myproject">MyProject</a>
                    </li>
                    {{/if}}
                    <li class="nav-item">
                        <a class="nav-link active" href="testimonials">Testimonials</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="blog">Blog</a>
                    </li>
                </ul>
                {{#if this.isLogin}}
                <ul class="navbar-nav mb-2 mb-lg-0 gap-2" style="margin-right: 20px;">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Hai {{user}}!</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="logout">Logout</a>
                    </li>
                </ul>
                {{else}}
                <ul class="navbar-nav mb-2 mb-lg-0 gap-2" style="margin-right: 20px;">
                    <li class="nav-item">
                        <a class="nav-link active" href="form-register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="form-login">Login</a>
                    </li>
                </ul>
                {{/if}}
                <a href="contact">
                    <button class="btn btn-warning" style="
                        background-color: #930e2d !important;
                        color: white !important;
                        padding: 6px 25px !important;
                        border: none !important;
                        border-radius: 20px !important;
                        margin-top: 5px !important;
                        font-size: 15px !important;
                        cursor: pointer !important;">Contact</button>
                </a>
            </div>
        </div>
    </nav>
    <!-- Navbar -->
    <div class="container">
        <h1 style="
            font-weight: bold !important;
            text-align: center !important;
            margin-top: 50px !important;
            color: #930e2d !important;
            font-size: xx-large !important;
                ">Submit Project</h1>
        <div class="container-form">
            <form method="post" action="/myproject-update/{{project.id}}">
                <div class="mb-3">
                    <label for="input-name" class="form-label">Project Name</label>
                    <input type="text" class="form-control" id="input-project-name" name="name" aria-describedby="emailHelp" placeholder="{{project.name}}" value="{{project.name}}" required>
                </div>
                <div class="mb-3">
                <div class="row g-3">
                        <div class="col">
                            <label for="start-date">Start Date</label>
                            <input type="date" class="form-control" name="start_date" id="input-start-date" value="{{project.start_date}}">
                        </div>
                        <div class="col">
                            <label for="end-date">End Date</label>
                            <input type="date" class="form-control" name="end_date" id="input-end-date" value="{{project.end_date}}">
                        </div>
                </div>
                <div class="mb-3">
                    <label for="input-message" class="form-label">Description</label>
                    <textarea class="form-control" id="input-description" name="description" rows="7" placeholder="{{project.description}}" value="{{project.description}}" required>{{project.description}}</textarea>
                </div>
                <div class="mb-3">
                    <label>Technologies</label>
                    <div class="checklist-technologies">
                        <div class="col-tech">
                            <div class="checkbox-tech">
                                <input type="checkbox" id="check-nodejs" name="nodeJS" value="true"/>
                                <label>
                                    <i class="fa-brands fa-node-js fa-lg"></i>
                                    NodeJS
                                </label>
                            </div>
                            <div class="checkbox-tech">
                                <input type="checkbox" id="check-javascript" name="javaScript" value="true" />
                                <label>
                                    <i class="fa-brands fa-js fa-lg"></i>
                                    JavaScript
                                </label>
                            </div>
                        </div>
                        <div class="col-tech">
                            <div class="checkbox-tech">
                                <input type="checkbox" id="check-reactjs" name="reactJS" value="true"/>
                                <label>
                                    <i class="fa-brands fa-react fa-lg"></i>
                                    ReactJS
                                </label>
                            </div>
                            <div class="checkbox-tech">
                                <input type="checkbox" id="check-html5" name="HTML" value="true"/>
                                <label>
                                    <i class="fa-brands fa-html5 fa-lg"></i>
                                    HTML
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="input-message" class="form-label">Upload Image</label>
                    <div class="input-group mb-3">
                        <input type="file" class="form-control" id="upload-image" name="image" value="{{project.image}}">
                        <label class="input-group-text" for="inputGroupFile02">Upload</label>
                    </div>
                </div>
                <div class="submit-position">
                    <button type="submit" class="btn btn-primary" >Submit</button>
                    {{!-- onclick="addMyProject()" --}}
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    {{!-- <script src="js/myproject.js"></script> --}}
    {{!-- <script src="index.js"></script> --}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>