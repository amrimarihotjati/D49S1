    <div>
        <h5>My Project</h5>
        <div class="d-flex justify-content-center mb-5">
            <a href="myproject">
            <button>Add Project</button>
            </a>
        </div>
        <div class="container-project-list" id="container-project-list">
            {{#each dataProject}}
            <div class="card" style="width: 18rem;">
                <img src="{{this.image}}" class="card-img-top">
                <div class="card-body">
                    <h2 class="card-title text-start">
                        <a class="text-decoration-none" href="/detailproject/{{@index}}">{{this.name}}</a>
                    </h2>
                    <p class="card-text">{{this.start_date}}</p>
                    <p class="card-text">{{this.description}}</p>
                    <div class="tech-card-container">
                        <div class="tech-project">
                            {{#if this.technologies.nodeJS}}
                            <i class="fa-brands fa-node-js fa-xl"></i>
                            {{/if}}
                            {{#if this.technologies.reactJS}}
                            <i class="fa-brands fa-react fa-xl"></i>
                            {{/if}}
                            {{#if this.technologies.javaScript}}
                            <i class="fa-brands fa-js fa-xl"></i>
                            {{/if}}
                            {{#if this.technologies.HTML}}
                            <i class="fa-brands fa-html5 fa-xl"></i>
                            {{/if}}
                        </div>
                    </div>
                    <div class="button-card-container">
                            <a href="myproject-edit/{{@index}}" class="btn btn-primary">EDIT</a>
                            <a href="delete-project/{{@index}}" class="btn btn-danger">DELETE</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
